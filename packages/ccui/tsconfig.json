{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": false,
    "jsx": "preserve",
    "sourceMap": true,
    "lib": ["esnext", "dom","DOM.Iterable"],
    "types": ["vite/client", "node"],
    "esModuleInterop": true,
    "paths": {
      "@ccui/*": ["./ui/*"]
    },
    "declaration": true,
    "declarationDir": "build/types/"
  },
  "include": [
    "ui/**/*.ts",
    "ui/**/*.tsx",
    "ui/**/*.vue",
    "vite.config.ts",
    "docs/**/*.vue",
    "docs/**/*.ts"
  ]
}
